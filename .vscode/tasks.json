{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build tower-defense",
            "command": "cmake",
            "args": [
                "--build",
                "${cwd}/build",
            ],
            "problemMatcher": [],
        },
        {
            "type": "shell",
            "label": "Valgrind tower-defense",
